---
import Layout from '../layouts/Layout.astro';
import Icon from '../components/Icon.astro';
import {
  siWhatsapp, siTelegram, siDiscord, siSignal, siApple, siMatrix, siNextcloud, siZalo,
  siAnthropic, siGoogle, siOllama, siMistralai, siPerplexity, siHuggingface,
  siNotion, siObsidian, siTrello, siGithub,
  siSpotify, siSonos, siShazam,
  siPhilipshue, siHomeassistant,
  siGooglechrome, siGmail, si1password,
  siX,
  siLinux, siAndroid, siMacos, siIos
} from 'simple-icons';

const siIcon = (icon: any) => icon.path;

const chatProviders = [
  { name: 'WhatsApp', icon: siIcon(siWhatsapp), color: '#25D366', url: 'https://www.clawhub.com/skills/wacli' },
  { name: 'Telegram', icon: siIcon(siTelegram), color: '#26A5E4', url: 'https://docs.openclaw.ai/channels/telegram' },
  { name: 'Discord', icon: siIcon(siDiscord), color: '#5865F2', url: 'https://clawhub.com/skills/discord' },
  { name: 'Slack', icon: 'lucide:hash', color: '#E01E5A', url: 'https://clawhub.com/skills/slack' },
  { name: 'Signal', icon: siIcon(siSignal), color: '#3A76F0', url: 'https://clawhub.com/skills/sag' },
  { name: 'iMessage', icon: siIcon(siApple), color: '#A2AAAD', url: 'https://github.com/steipete/imsg' },
  { name: 'Matrix', icon: siIcon(siMatrix), color: '#0DBD8B', url: 'https://docs.openclaw.ai/channels/matrix' },
  { name: 'Nextcloud', icon: siIcon(siNextcloud), color: '#0082C9', url: 'https://docs.openclaw.ai/channels/nextcloud-talk' },
];

const modelProviders = [
  { name: 'Anthropic', icon: siIcon(siAnthropic), color: '#D4A574', url: 'https://docs.openclaw.ai/concepts/models' },
  { name: 'OpenAI', icon: 'lucide:bot', color: '#00A67E', url: 'https://docs.openclaw.ai/concepts/models' },
  { name: 'Google', icon: siIcon(siGoogle), color: '#4285F4', url: 'https://docs.openclaw.ai/concepts/models' },
  { name: 'Mistral', icon: siIcon(siMistralai), color: '#FF7000', url: 'https://docs.openclaw.ai/concepts/models' },
  { name: 'Ollama', icon: siIcon(siOllama), color: '#6b7280', url: 'https://docs.openclaw.ai/concepts/models' },
  { name: 'Perplexity', icon: siIcon(siPerplexity), color: '#20B8CD', url: 'https://docs.openclaw.ai/concepts/models' },
];

const productivity = [
  { name: 'Notion', icon: siIcon(siNotion), color: '#9ca3af', url: 'https://www.clawhub.com/skills' },
  { name: 'Obsidian', icon: siIcon(siObsidian), color: '#7C3AED', url: 'https://clawhub.com/skills/obsidian' },
  { name: 'Trello', icon: siIcon(siTrello), color: '#0079BF', url: 'https://clawhub.com/skills/trello' },
  { name: 'GitHub', icon: siIcon(siGithub), color: '#6b7280', url: 'https://www.clawhub.com/skills' },
];

const smartHome = [
  { name: 'Philips Hue', icon: siIcon(siPhilipshue), color: '#0065D3', url: 'https://www.clawhub.com/skills/openhue' },
  { name: 'Home Assistant', icon: siIcon(siHomeassistant), color: '#41BDF5', url: 'https://www.clawhub.com/skills/homeassistant' },
  { name: 'Spotify', icon: siIcon(siSpotify), color: '#1DB954', url: 'https://www.clawhub.com/skills/spotify-player' },
  { name: 'Sonos', icon: siIcon(siSonos), color: '#6b7280', url: 'https://clawhub.com/skills/sonoscli' },
];

const tools = [
  { name: 'Browser', icon: siIcon(siGooglechrome), color: '#4285F4', url: 'https://clawhub.com/skills/verify-on-browser' },
  { name: 'Gmail', icon: siIcon(siGmail), color: '#EA4335', url: 'https://docs.openclaw.ai/automation/gmail-pubsub' },
  { name: '1Password', icon: siIcon(si1password), color: '#0572EC', url: 'https://clawhub.com/skills/1password' },
  { name: 'Twitter/X', icon: siIcon(siX), color: '#6b7280', url: 'https://www.clawhub.com/skills/bird' },
];

const platforms = [
  { name: 'macOS', icon: siIcon(siMacos), color: '#A2AAAD', url: 'https://docs.openclaw.ai/platforms/macos' },
  { name: 'iOS', icon: siIcon(siIos), color: '#007AFF', url: 'https://docs.openclaw.ai/platforms/ios' },
  { name: 'Android', icon: siIcon(siAndroid), color: '#34A853', url: 'https://docs.openclaw.ai/platforms/android' },
  { name: 'Linux', icon: siIcon(siLinux), color: '#FCC624', url: 'https://docs.openclaw.ai/platforms/linux' },
];

const sections = [
  { title: 'Chat Providers', desc: 'Message OpenClaw from any chat app', items: chatProviders },
  { title: 'AI Models', desc: 'Use any model — cloud or local', items: modelProviders },
  { title: 'Productivity', desc: 'Notes, tasks, and code', items: productivity },
  { title: 'Smart Home & Media', desc: 'Control your lights, music, and more', items: smartHome },
  { title: 'Tools', desc: 'Browser, email, and social', items: tools },
  { title: 'Platforms', desc: 'Run everywhere', items: platforms },
];
---

<Layout title="Integrations — OpenClaw">
  <nav class="nav">
    <a href="/" class="nav-logo">
      <img src="/logo.png" alt="OpenClaw" class="logo light-logo" />
      <img src="/logo-dark.png" alt="OpenClaw" class="logo dark-logo" />
    </a>
    <button class="theme-btn" id="theme-toggle" aria-label="Toggle theme">
      <svg class="sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
      <svg class="moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
    </button>
  </nav>

  <main class="container">
    <header class="header">
      <a href="/" class="back">&larr; Home</a>
      <h1>Integrations</h1>
      <p>50+ integrations with the apps and services you already use</p>
    </header>

    {sections.map((section) => (
      <section class="section">
        <h2>{section.title}</h2>
        <p class="section-desc">{section.desc}</p>
        <div class="grid">
          {section.items.map((item) => (
            <a class="card" href={item.url}>
              <Icon icon={item.icon} color={item.color} size={28} />
              <span>{item.name}</span>
            </a>
          ))}
        </div>
      </section>
    ))}

    <section class="cta">
      <h2>Ready to get started?</h2>
      <p>Install OpenClaw and connect your first app</p>
      <a href="https://docs.openclaw.ai/getting-started" class="btn">Get Started</a>
    </section>

    <section class="clawhub">
      <h2>Want more?</h2>
      <p>Browse 100+ community-built skills on ClawHub</p>
      <a href="https://clawhub.com" target="_blank" class="btn btn-secondary">Browse ClawHub &rarr;</a>
    </section>

    <footer class="footer">
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
        <a href="/showcase">Showcase</a>
      </nav>
      <p>Built by <a href="https://steipete.me">Peter Steinberger</a> & <a href="https://github.com/openclaw/openclaw#community">community</a></p>
    </footer>
  </main>

  <script>
    document.getElementById('theme-toggle')?.addEventListener('click', () => {
      const theme = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    });
  </script>
</Layout>

<style>
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 40px;
  }
  .nav-logo { display: flex; }
  .nav-logo .logo { height: 28px; width: auto; }
  .theme-btn {
    background: none;
    border: none;
    padding: 6px;
    cursor: pointer;
    color: var(--fg-muted);
    display: flex;
    transition: all 0.3s ease;
  }
  .theme-btn:hover {
    color: var(--fg);
    transform: rotate(15deg);
  }
  .theme-btn:active {
    transform: scale(0.9);
  }

  .dark-logo { display: none; }
  :global([data-theme="dark"]) .light-logo { display: none; }
  :global([data-theme="dark"]) .dark-logo { display: block; }
  .theme-btn .moon { display: none; }
  :global([data-theme="dark"]) .theme-btn .sun { display: none; }
  :global([data-theme="dark"]) .theme-btn .moon { display: block; }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px 60px;
  }

  .header {
    text-align: center;
    padding: 40px 0;
  }
  .back {
    display: inline-block;
    color: var(--fg-muted);
    text-decoration: none;
    font-size: 14px;
    margin-bottom: 20px;
  }
  .back:hover { color: var(--accent); }
  .header h1 {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .header p {
    color: var(--fg-soft);
  }

  .section {
    margin-bottom: 40px;
  }
  .section h2 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 4px;
  }
  .section-desc {
    color: var(--fg-muted);
    font-size: 14px;
    margin-bottom: 16px;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 12px;
  }

  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    padding: 20px 16px;
    background: var(--bg-soft);
    border: 1px solid var(--border);
    border-radius: 15px;
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.15s ease;
  }
  .card:hover { border-color: var(--fg-muted); }
  .card :global(svg) {
    width: 28px;
    height: 28px;
  }
  .card span {
    font-size: 13px;
    font-weight: 500;
  }

  .cta, .clawhub {
    text-align: center;
    padding: 40px;
    background: var(--bg-soft);
    border: 1px solid var(--border);
    border-radius: 15px;
    margin-bottom: 24px;
  }
  .cta h2, .clawhub h2 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .cta p, .clawhub p {
    color: var(--fg-soft);
    margin-bottom: 20px;
  }
  .btn {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 14px 24px;
    border-radius: 15px;
    font-size: 15px;
    font-weight: 400;
    text-decoration: none;
    background: #F70713;
    color: #FFFFFF;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  .btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(50% 50% at 50% 50%, rgba(255, 0, 13, 0.45) 0%, rgba(255, 0, 13, 0.9) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
    border-radius: inherit;
  }
  :global([data-theme="dark"]) .btn::before {
    background: radial-gradient(50% 50% at 50% 50%, rgba(255, 100, 100, 0.9) 0%, rgba(247, 7, 19, 1) 100%);
  }
  .btn:hover::before {
    opacity: 1;
  }
  .btn-secondary {
    background: var(--bg);
    border: 1px solid var(--border);
    color: var(--fg);
  }
  .btn-secondary::before {
    display: none;
  }
  :global([data-theme="dark"]) .btn-secondary {
    background: transparent;
    border-color: var(--border);
  }
  .btn-secondary:hover {
    background: var(--bg-soft);
    border-color: var(--fg-muted);
  }

  .footer {
    text-align: center;
    padding-top: 40px;
    border-top: 1px solid var(--border);
  }
  .footer nav {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-bottom: 12px;
  }
  .footer nav a {
    color: var(--fg-soft);
    text-decoration: none;
    font-size: 14px;
  }
  .footer nav a:hover { color: var(--fg); }
  .footer p {
    font-size: 13px;
    color: var(--fg-muted);
  }
  .footer p a {
    color: var(--accent);
    text-decoration: none;
  }

  @media (max-width: 640px) {
    .grid { grid-template-columns: repeat(2, 1fr); }
  }
</style>
