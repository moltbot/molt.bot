---
import Layout from '../layouts/Layout.astro';
import showcaseData from '../data/showcase.json';
---

<Layout title="Showcase â€” What People Are Building with OpenClaw">
  <nav class="nav">
    <a href="/" class="nav-logo">
      <img src="/logo.png" alt="OpenClaw" class="logo light-logo" />
      <img src="/logo-dark.png" alt="OpenClaw" class="logo dark-logo" />
    </a>
    <button class="theme-btn" id="theme-toggle" aria-label="Toggle theme">
      <svg class="sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
      <svg class="moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
    </button>
  </nav>

  <main class="container">
    <header class="header">
      <a href="/" class="back">&larr; Home</a>
      <h1>What People Are Building</h1>
      <p>Real projects, real automation, real results.</p>
    </header>

    <div class="grid">
      {showcaseData.map((item) => (
        <a href={`https://x.com/${item.author}/status/${item.id}`} target="_blank" rel="noopener" class="card">
          <div class="card-header">
            <img src={`https://unavatar.io/x/${item.author}`} alt={item.author} loading="lazy" />
            <span class="author">@{item.author}</span>
            <svg class="x-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </div>
          <p class="quote">{item.quote}</p>
          {item.images && item.images.length > 0 && (
            <div class="images">
              {item.images.map((img: string) => (
                <img src={img} alt="Screenshot" loading="lazy" />
              ))}
            </div>
          )}
        </a>
      ))}
    </div>

    <section class="cta">
      <h2>Built something cool?</h2>
      <p>Share your creation with the community</p>
      <div class="cta-buttons">
        <a href="https://twitter.com/intent/tweet?text=Check%20out%20what%20I%20built%20with%20%40openclaw%21" target="_blank" class="btn btn-primary">Share on X</a>
        <a href="https://discord.com/invite/clawd" target="_blank" class="btn btn-secondary">Join Discord</a>
      </div>
    </section>

    <footer class="footer">
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
        <a href="/integrations">Integrations</a>
      </nav>
      <p>Built by <a href="https://steipete.me">Peter Steinberger</a> & <a href="https://github.com/openclaw/openclaw#community">community</a></p>
    </footer>
  </main>

  <script>
    document.getElementById('theme-toggle')?.addEventListener('click', () => {
      const theme = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    });
  </script>
</Layout>

<style>
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 40px;
  }
  .nav-logo { display: flex; }
  .nav-logo .logo { height: 28px; width: auto; }
  .theme-btn {
    background: none;
    border: none;
    padding: 6px;
    cursor: pointer;
    color: var(--fg-muted);
    display: flex;
    transition: all 0.3s ease;
  }
  .theme-btn:hover {
    color: var(--fg);
    transform: rotate(15deg);
  }
  .theme-btn:active {
    transform: scale(0.9);
  }

  .dark-logo { display: none; }
  :global([data-theme="dark"]) .light-logo { display: none; }
  :global([data-theme="dark"]) .dark-logo { display: block; }
  .theme-btn .moon { display: none; }
  :global([data-theme="dark"]) .theme-btn .sun { display: none; }
  :global([data-theme="dark"]) .theme-btn .moon { display: block; }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 24px 60px;
  }

  .header {
    text-align: center;
    padding: 40px 0;
  }
  .back {
    display: inline-block;
    color: var(--fg-muted);
    text-decoration: none;
    font-size: 14px;
    margin-bottom: 20px;
  }
  .back:hover { color: var(--accent); }
  .header h1 {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .header p {
    color: var(--fg-soft);
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: 16px;
    margin-bottom: 48px;
  }

  .card {
    display: flex;
    flex-direction: column;
    gap: 14px;
    padding: 20px;
    background: var(--bg-soft);
    border: 1px solid var(--border);
    border-radius: 15px;
    text-decoration: none;
    color: var(--fg);
    transition: border-color 0.15s ease;
  }
  .card:hover { border-color: var(--fg-muted); }

  .card-header {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .card-header > img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    flex-shrink: 0;
  }
  .author {
    flex: 1;
    font-weight: 500;
    font-size: 14px;
    color: var(--accent);
  }
  .x-icon {
    color: var(--fg-muted);
    flex-shrink: 0;
  }

  .quote {
    font-size: 14px;
    color: var(--fg-soft);
    line-height: 1.5;
    white-space: pre-line;
  }

  .images {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 8px;
  }
  .images img {
    width: 100%;
    border-radius: 15px;
    border: 1px solid var(--border);
    max-height: 160px;
    object-fit: cover;
  }

  .cta {
    text-align: center;
    padding: 40px;
    background: var(--bg-soft);
    border: 1px solid var(--border);
    border-radius: 15px;
    margin-bottom: 48px;
  }
  .cta h2 {
    font-size: 20px;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .cta p {
    color: var(--fg-soft);
    margin-bottom: 20px;
  }
  .cta-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
  }
  .btn {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 14px 24px;
    border-radius: 15px;
    font-size: 15px;
    font-weight: 400;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  .btn-primary {
    background: #F70713;
    color: #FFFFFF;
    border: none;
  }
  .btn-primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(50% 50% at 50% 50%, rgba(255, 0, 13, 0.45) 0%, rgba(255, 0, 13, 0.9) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
    border-radius: inherit;
  }
  :global([data-theme="dark"]) .btn-primary::before {
    background: radial-gradient(50% 50% at 50% 50%, rgba(255, 100, 100, 0.9) 0%, rgba(247, 7, 19, 1) 100%);
  }
  .btn-primary:hover::before {
    opacity: 1;
  }
  .btn-secondary {
    background: var(--bg);
    border: 1px solid var(--border);
    color: var(--fg);
  }
  .btn-secondary::before {
    display: none;
  }
  :global([data-theme="dark"]) .btn-secondary {
    background: transparent;
    border-color: var(--border);
  }
  .btn-secondary:hover {
    background: var(--bg-soft);
    border-color: var(--fg-muted);
  }

  .footer {
    text-align: center;
    padding-top: 40px;
    border-top: 1px solid var(--border);
  }
  .footer nav {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-bottom: 12px;
  }
  .footer nav a {
    color: var(--fg-soft);
    text-decoration: none;
    font-size: 14px;
  }
  .footer nav a:hover { color: var(--fg); }
  .footer p {
    font-size: 13px;
    color: var(--fg-muted);
  }
  .footer p a {
    color: var(--accent);
    text-decoration: none;
  }

  @media (max-width: 640px) {
    .grid { grid-template-columns: 1fr; }
    .cta-buttons { flex-direction: column; align-items: center; }
  }
</style>
