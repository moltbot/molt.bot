---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

function estimateReadTime(content: string): string {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  const minutes = Math.ceil(words / wordsPerMinute);
  return `${minutes} min read`;
}

const readTime = estimateReadTime(post.body || '');
const postUrl = `https://openclaw.ai/blog/${post.slug}`;
---

<Layout title={`${post.data.title} â€” OpenClaw Blog`} description={post.data.description}>
  <nav class="nav">
    <a href="/" class="nav-logo">
      <img src="/logo.png" alt="OpenClaw" class="logo light-logo" />
      <img src="/logo-dark.png" alt="OpenClaw" class="logo dark-logo" />
    </a>
    <button class="theme-btn" id="theme-toggle" aria-label="Toggle theme">
      <svg class="sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
      <svg class="moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
    </button>
  </nav>

  <main class="container">
    <article class="article">
      <header class="article-header">
        <a href="/blog" class="back">&larr; Back to blog</a>
        <h1 class="article-title">{post.data.title}</h1>

        {post.data.image && (
          <img src={post.data.image} alt={post.data.title} class="article-image" />
        )}

        <div class="article-meta">
          <div class="author-info">
            <img
              src={`https://unavatar.io/x/${post.data.authorHandle}`}
              alt={post.data.author}
              loading="lazy"
            />
            <div class="author-details">
              <span class="byline">Written by</span>
              <span class="author-name">{post.data.author}</span>
              <div class="author-meta">
                <a href={`https://x.com/${post.data.authorHandle}`} class="author-handle" target="_blank" rel="noopener">@{post.data.authorHandle}</a>
                <span class="meta-sep">&middot;</span>
                <span class="meta-date">{formatDate(post.data.date)}</span>
                <span class="meta-sep">&middot;</span>
                <span class="meta-read">{readTime}</span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <div class="article-content">
        <Content />
      </div>

      <footer class="article-footer">
        <div class="share-section">
          <span class="share-label">Share this post</span>
          <div class="share-buttons">
            <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(postUrl)}&via=openclaw`} target="_blank" rel="noopener" class="share-btn">
              Share on X
            </a>
            <a href={`https://news.ycombinator.com/submitlink?u=${encodeURIComponent(postUrl)}&t=${encodeURIComponent(post.data.title)}`} target="_blank" rel="noopener" class="share-btn share-hn">
              Post to HN
            </a>
          </div>
        </div>

        <div class="cta-box">
          <h3>Ready to try OpenClaw?</h3>
          <p>Get started with a single command.</p>
          <div class="cta-code">
            <code>curl -fsSL https://openclaw.ai/install.sh | bash</code>
          </div>
          <a href="/" class="cta-btn">Learn more &rarr;</a>
        </div>
      </footer>
    </article>

    <footer class="page-footer">
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
        <a href="/showcase">Showcase</a>
      </nav>
      <p>Built by <a href="https://steipete.me">Peter Steinberger</a> & <a href="https://github.com/openclaw/openclaw#community">community</a></p>
    </footer>
  </main>

  <script>
    document.getElementById('theme-toggle')?.addEventListener('click', () => {
      const theme = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    });
  </script>
</Layout>

<style>
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 40px;
  }
  .nav-logo { display: flex; }
  .nav-logo .logo { height: 28px; width: auto; }
  .theme-btn {
    background: none;
    border: none;
    padding: 6px;
    cursor: pointer;
    color: var(--fg-muted);
    display: flex;
    transition: all 0.3s ease;
  }
  .theme-btn:hover {
    color: var(--fg);
    transform: rotate(15deg);
  }
  .theme-btn:active {
    transform: scale(0.9);
  }

  .dark-logo { display: none; }
  :global([data-theme="dark"]) .light-logo { display: none; }
  :global([data-theme="dark"]) .dark-logo { display: block; }
  .theme-btn .moon { display: none; }
  :global([data-theme="dark"]) .theme-btn .sun { display: none; }
  :global([data-theme="dark"]) .theme-btn .moon { display: block; }

  .container {
    max-width: 720px;
    margin: 0 auto;
    padding: 0 24px 60px;
    min-height: calc(100vh - 60px);
    display: flex;
    flex-direction: column;
  }

  .article-header {
    margin-bottom: 40px;
  }

  .back {
    display: inline-block;
    color: var(--fg-muted);
    text-decoration: none;
    font-size: 14px;
    margin-bottom: 24px;
  }
  .back:hover { color: var(--accent); }

  .article-title {
    font-size: 32px;
    font-weight: 600;
    line-height: 1.2;
    margin-bottom: 24px;
  }

  .article-image {
    width: 100%;
    max-height: 300px;
    object-fit: contain;
    border-radius: 15px;
    margin-bottom: 24px;
  }

  .article-meta {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 16px;
    padding: 18px 0;
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
  }

  .author-info {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .author-info img {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    border: 1px solid var(--border);
    padding: 2px;
  }
  .author-details {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  .byline {
    font-size: 11px;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--fg-muted);
  }
  .author-name {
    font-size: 18px;
    font-weight: 600;
    letter-spacing: 0;
    color: var(--fg);
  }
  .author-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
    font-size: 12px;
    color: var(--fg-muted);
    letter-spacing: 0.02em;
  }
  .author-handle {
    color: var(--fg-muted);
    text-decoration: none;
  }
  .author-handle:hover {
    color: var(--fg);
    text-decoration: underline;
  }
  .meta-sep { opacity: 0.5; }

  /* Article Content */
  .article-content {
    line-height: 1.8;
    color: var(--fg-soft);
  }

  .article-content :global(p:first-child) {
    font-size: 18px;
    line-height: 1.7;
    color: var(--fg);
    margin-bottom: 16px;
  }

  .article-content :global(p) {
    margin-bottom: 20px;
  }

  .article-content :global(h2) {
    font-size: 22px;
    font-weight: 600;
    color: var(--fg);
    margin-top: 32px;
    margin-bottom: 16px;
  }

  .article-content :global(ul) {
    margin-bottom: 20px;
    padding-left: 24px;
  }

  .article-content :global(li) {
    margin-bottom: 8px;
  }

  .article-content :global(li::marker) {
    color: var(--accent);
  }

  .article-content :global(strong) {
    color: var(--fg);
    font-weight: 600;
  }

  .article-content :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 32px 0;
  }

  .article-content :global(em) {
    font-style: italic;
  }

  .article-content :global(a) {
    color: var(--accent);
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  .article-content :global(a:hover) {
    opacity: 0.8;
  }

  .article-content :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    padding: 2px 6px;
    border-radius: 15px;
    background: var(--code-bg);
    color: var(--fg);
  }

  .article-content :global(pre) {
    padding: 16px;
    border-radius: 15px;
    background: var(--code-bg);
    border: 1px solid var(--border);
    overflow-x: auto;
    margin-bottom: 24px;
  }

  .article-content :global(pre code) {
    padding: 0;
    background: transparent;
  }

  .article-content :global(blockquote) {
    margin: 24px 0;
    padding: 16px 20px;
    border-left: 3px solid var(--accent);
    background: var(--bg-soft);
    border-radius: 0 15px 15px 0;
    font-style: italic;
  }

  /* Article Footer */
  .article-footer {
    margin-top: 48px;
    padding-top: 32px;
    border-top: 1px solid var(--border);
  }

  .share-section {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 32px;
    flex-wrap: wrap;
  }
  .share-label {
    font-size: 14px;
    color: var(--fg-muted);
  }
  .share-buttons {
    display: flex;
    gap: 10px;
  }
  .share-btn {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 12px 20px;
    border-radius: 15px;
    font-size: 14px;
    font-weight: 400;
    text-decoration: none;
    background: var(--bg);
    border: 1px solid var(--border);
    color: var(--fg);
    transition: all 0.2s ease;
  }
  :global([data-theme="dark"]) .share-btn {
    background: transparent;
    border-color: var(--border);
  }
  .share-btn:hover {
    background: var(--bg-soft);
    border-color: var(--fg-muted);
  }
  .share-hn {
    color: #ff6600;
    border-color: #ff6600;
  }
  :global([data-theme="dark"]) .share-hn {
    border-color: #ff6600;
  }
  .share-hn:hover {
    background: rgba(255, 102, 0, 0.1);
    border-color: #ff6600;
  }

  .cta-box {
    padding: 28px;
    border-radius: 15px;
    background: var(--bg-soft);
    border: 1px solid var(--border);
    text-align: center;
  }
  .cta-box h3 {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .cta-box p {
    color: var(--fg-soft);
    margin-bottom: 16px;
  }
  .cta-code {
    display: inline-block;
    padding: 10px 16px;
    border-radius: 15px;
    background: var(--code-bg);
    border: 1px solid var(--border);
    margin-bottom: 16px;
  }
  .cta-code code {
    font-family: var(--font-mono);
    font-size: 13px;
    color: var(--fg);
  }
  .cta-btn {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 14px 24px;
    border-radius: 15px;
    background: #F70713;
    color: #FFFFFF;
    font-size: 15px;
    font-weight: 400;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  .cta-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(50% 50% at 50% 50%, rgba(255, 0, 13, 0.45) 0%, rgba(255, 0, 13, 0.9) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: -1;
    border-radius: inherit;
  }
  :global([data-theme="dark"]) .cta-btn::before {
    background: radial-gradient(50% 50% at 50% 50%, rgba(255, 100, 100, 0.9) 0%, rgba(247, 7, 19, 1) 100%);
  }
  .cta-btn:hover::before {
    opacity: 1;
  }

  /* Page Footer */
  .page-footer {
    margin-top: auto;
    padding-top: 48px;
    text-align: center;
  }
  .page-footer nav {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-bottom: 12px;
  }
  .page-footer nav a {
    color: var(--fg-soft);
    text-decoration: none;
    font-size: 14px;
  }
  .page-footer nav a:hover { color: var(--fg); }
  .page-footer p {
    font-size: 13px;
    color: var(--fg-muted);
  }
  .page-footer p a {
    color: var(--accent);
    text-decoration: none;
  }

  @media (max-width: 480px) {
    .article-title { font-size: 24px; }
    .article-meta {
      align-items: flex-start;
    }
    .author-info { align-items: flex-start; }
    .author-name { font-size: 18px; }
    .author-meta { gap: 6px; }
    .article-content :global(p:first-child) { font-size: 16px; }
    .cta-box { padding: 20px; }
    .cta-code {
      padding: 8px 12px;
      word-break: break-all;
    }
    .cta-code code { font-size: 12px; }
    .share-section {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
