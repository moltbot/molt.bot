---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts, sorted by date (newest first)
const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

function estimateReadTime(content: string): string {
  const wordsPerMinute = 200;
  const words = content.split(/\s+/).length;
  const minutes = Math.ceil(words / wordsPerMinute);
  return `${minutes} min read`;
}
---

<Layout title="Blog — OpenClaw">
  <nav class="nav">
    <a href="/" class="nav-logo">
      <img src="/logo.png" alt="OpenClaw" class="logo light-logo" />
      <img src="/logo-dark.png" alt="OpenClaw" class="logo dark-logo" />
    </a>
    <button class="theme-btn" id="theme-toggle" aria-label="Toggle theme">
      <svg class="sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
      <svg class="moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
    </button>
  </nav>

  <main class="container">
    <header class="header">
      <a href="/" class="back">&larr; Home</a>
      <h1>Blog</h1>
      <p>Updates, insights, and news from the OpenClaw team</p>
    </header>

    <div class="posts">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="post-card">
          <div class="post-meta">
            <div class="post-meta-author">
              <img
                src={`https://unavatar.io/x/${post.data.authorHandle}`}
                alt={post.data.author}
                loading="lazy"
              />
              <div class="post-meta-details">
                <span class="post-meta-name">{post.data.author}</span>
                <div class="post-meta-line">
                  <span class="post-date">{formatDate(post.data.date)}</span>
                  <span class="meta-sep">•</span>
                  <span class="post-readtime">{estimateReadTime(post.body || '')}</span>
                </div>
              </div>
            </div>
            <div class="post-tags">
              {post.data.tags.map((tag) => (
                <span class="tag">#{tag}</span>
              ))}
            </div>
          </div>
          <h2 class="post-title">{post.data.title}</h2>
          <p class="post-desc">{post.data.description}</p>
        </a>
      ))}
    </div>

    <footer class="footer">
      <nav>
        <a href="/">Home</a>
        <a href="/showcase">Showcase</a>
        <a href="/integrations">Integrations</a>
      </nav>
      <p>Built by <a href="https://steipete.me">Peter Steinberger</a> & <a href="https://github.com/openclaw/openclaw#community">community</a></p>
    </footer>
  </main>

  <script>
    document.getElementById('theme-toggle')?.addEventListener('click', () => {
      const theme = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    });
  </script>
</Layout>

<style>
  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 14px 40px;
  }
  .nav-logo { display: flex; }
  .nav-logo .logo { height: 28px; width: auto; }
  .theme-btn {
    background: none;
    border: none;
    padding: 6px;
    cursor: pointer;
    color: var(--fg-muted);
    display: flex;
    transition: all 0.3s ease;
  }
  .theme-btn:hover {
    color: var(--fg);
    transform: rotate(15deg);
  }
  .theme-btn:active {
    transform: scale(0.9);
  }

  .dark-logo { display: none; }
  :global([data-theme="dark"]) .light-logo { display: none; }
  :global([data-theme="dark"]) .dark-logo { display: block; }
  .theme-btn .moon { display: none; }
  :global([data-theme="dark"]) .theme-btn .sun { display: none; }
  :global([data-theme="dark"]) .theme-btn .moon { display: block; }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px 60px;
    min-height: calc(100vh - 60px);
    display: flex;
    flex-direction: column;
  }

  .header {
    text-align: center;
    padding: 40px 0;
  }
  .back {
    display: inline-block;
    color: var(--fg-muted);
    text-decoration: none;
    font-size: 14px;
    margin-bottom: 20px;
  }
  .back:hover { color: var(--accent); }
  .header h1 {
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .header p {
    color: var(--fg-soft);
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: 20px;
    flex: 1;
  }

  .post-card {
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding: 24px;
    background: var(--bg-soft);
    border: 1px solid var(--border);
    border-radius: 15px;
    text-decoration: none;
    color: var(--fg);
    transition: border-color 0.15s ease;
  }
  .post-card:hover { border-color: var(--fg-muted); }

  .post-meta {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    justify-content: space-between;
    padding-bottom: 12px;
    border-bottom: 1px solid var(--border);
  }
  .post-meta-author {
    display: flex;
    align-items: center;
    gap: 12px;
  }
  .post-meta-author img {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid var(--border);
    padding: 2px;
  }
  .post-meta-details {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  .post-meta-name {
    font-weight: 600;
    color: var(--fg);
    font-size: 14px;
  }
  .post-meta-line {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: var(--fg-muted);
  }
  .meta-sep {
    opacity: 0.6;
  }

  .post-title {
    font-size: 20px;
    font-weight: 600;
    line-height: 1.3;
  }
  .post-card:hover .post-title { color: var(--accent); }

  .post-desc {
    font-size: 14px;
    line-height: 1.6;
    color: var(--fg-soft);
  }

  .post-tags {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
    justify-content: flex-end;
  }
  .tag {
    font-size: 11px;
    color: var(--fg-muted);
    padding: 2px 8px;
    border-radius: 999px;
    background: var(--bg-muted);
  }

  .footer {
    margin-top: auto;
    padding-top: 40px;
    text-align: center;
  }
  .footer nav {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-bottom: 12px;
  }
  .footer nav a {
    color: var(--fg-soft);
    text-decoration: none;
    font-size: 14px;
  }
  .footer nav a:hover { color: var(--fg); }
  .footer p {
    font-size: 13px;
    color: var(--fg-muted);
  }
  .footer p a {
    color: var(--accent);
    text-decoration: none;
  }

  @media (max-width: 480px) {
    .post-card { padding: 18px; }
    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }
    .post-tags { justify-content: flex-start; }
  }
</style>
