    document.getElementById('theme-toggle')?.addEventListener('click', () => {
      const theme = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', theme);
      localStorage.setItem('theme', theme);
    });

    // === EASTER EGGS ===

    // 1. Logo double-click makes it dance!
    document.querySelectorAll('.nav-logo, .hero-logo-wrap').forEach(logo => {
      logo.addEventListener('dblclick', (e) => {
        e.preventDefault();
        // Find the visible logo (check computed style, not inline)
        const imgs = logo.querySelectorAll('img');
        const visibleImg = Array.from(imgs).find(img => getComputedStyle(img).display !== 'none');
        if (visibleImg) {
          visibleImg.style.animation = 'lobsterDance 0.6s cubic-bezier(0.34, 1.56, 0.64, 1)';
          setTimeout(() => visibleImg.style.animation = '', 600);
        }
      });
    });

    // 2. Konami Code - unlocks "party mode"
    const konamiCode = ['ArrowUp', 'ArrowUp', 'ArrowDown', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'ArrowLeft', 'ArrowRight', 'b', 'a'];
    let konamiIndex = 0;
    document.addEventListener('keydown', (e) => {
      if (e.key === konamiCode[konamiIndex]) {
        konamiIndex++;
        if (konamiIndex === konamiCode.length) {
          konamiIndex = 0;
          document.body.classList.add('party-mode');
          setTimeout(() => document.body.classList.remove('party-mode'), 3000);
        }
      } else {
        konamiIndex = 0;
      }
    });


    // 5. Hero title glitch on long hover
    let glitchTimeout;
    const heroTitle = document.querySelector('.hero h1');
    heroTitle?.addEventListener('mouseenter', () => {
      glitchTimeout = setTimeout(() => {
        heroTitle.classList.add('glitch-text');
        setTimeout(() => heroTitle.classList.remove('glitch-text'), 500);
      }, 2000);
    });
    heroTitle?.addEventListener('mouseleave', () => {
      clearTimeout(glitchTimeout);
    });

    // 6. Confetti on successful copy
    function createConfetti(x, y) {
      const colors = ['#F70713', '#10b981', '#3b82f6', '#f59e0b', '#8b5cf6'];
      for (let i = 0; i < 12; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        confetti.style.left = x + 'px';
        confetti.style.top = y + 'px';
        confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
        confetti.style.setProperty('--tx', (Math.random() - 0.5) * 100 + 'px');
        confetti.style.setProperty('--ty', (Math.random() - 0.5) * 100 + 'px');
        confetti.style.setProperty('--r', Math.random() * 360 + 'deg');
        document.body.appendChild(confetti);
        setTimeout(() => confetti.remove(), 600);
      }
    }

    // Attach confetti to copy buttons
    document.querySelectorAll('.copy-line-btn').forEach(btn => {
      const originalClick = btn.onclick;
      btn.addEventListener('click', (e) => {
        const rect = btn.getBoundingClientRect();
        createConfetti(rect.left + rect.width / 2, rect.top + rect.height / 2);
      });
    });

    // Mobile menu
    const hamburger = document.getElementById('hamburger');
    const mobileMenu = document.getElementById('mobile-menu');
    hamburger?.addEventListener('click', () => {
      hamburger.classList.toggle('active');
      mobileMenu?.classList.toggle('active');
      document.body.style.overflow = mobileMenu?.classList.contains('active') ? 'hidden' : '';
    });
    mobileMenu?.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        hamburger?.classList.remove('active');
        mobileMenu?.classList.remove('active');
        document.body.style.overflow = '';
      });
    });

    // Install section functionality
    const windowsPsCmd = 'iwr -useb https://openclaw.ai/install.ps1 | iex';
    const windowsPsBetaCmd = '& ([scriptblock]::Create((iwr -useb https://openclaw.ai/install.ps1))) -Tag beta';
    const windowsCmdCmd = 'curl -fsSL https://openclaw.ai/install.cmd -o install.cmd && install.cmd && del install.cmd';
    const windowsCmdBetaCmd = 'curl -fsSL https://openclaw.ai/install.cmd -o install.cmd && install.cmd --tag beta && del install.cmd';

    let currentPm = 'npm';
    let currentMode = 'oneliner';
    let currentHackable = 'installer';
    let currentBeta = false;
    let osPickerExpanded = false;
    let currentWinShell = 'powershell';
    const isWindows = navigator.platform?.toLowerCase().includes('win') || navigator.userAgent?.toLowerCase().includes('windows');
    let currentOs = isWindows ? 'windows' : 'unix';

    const osLabels = { unix: 'macOS/Linux', windows: 'Windows' };

    function updateCommands() {
      const betaSuffix = currentBeta ? '@beta' : '';
      const installCmd = currentPm === 'npm' ? `npm i -g openclaw${betaSuffix}` : `pnpm add -g openclaw${betaSuffix}`;
      document.querySelectorAll('.pm-install').forEach(el => el.textContent = installCmd);

      let onelinerCmd;
      if (currentOs === 'unix') {
        onelinerCmd = currentBeta ? "curl -fsSL https://openclaw.ai/install.sh | bash -s -- --beta" : "curl -fsSL https://openclaw.ai/install.sh | bash";
      } else if (currentWinShell === 'cmd') {
        onelinerCmd = currentBeta ? windowsCmdBetaCmd : windowsCmdCmd;
      } else {
        onelinerCmd = currentBeta ? windowsPsBetaCmd : windowsPsCmd;
      }
      document.querySelectorAll('.os-cmd').forEach(el => el.textContent = onelinerCmd);

      const hackableCmd = "curl -fsSL https://openclaw.ai/install.sh | bash -s -- --install-method git";
      document.querySelectorAll('.os-cmd-hackable').forEach(el => el.textContent = hackableCmd);

      document.getElementById('os-detected').textContent = osLabels[currentOs];

      if (currentMode === 'hackable') {
        document.getElementById('hackable-installer-content').style.display = currentHackable === 'installer' ? 'block' : 'none';
        document.getElementById('hackable-pnpm-content').style.display = currentHackable === 'pnpm' ? 'block' : 'none';
      }

      const betaBtn = document.getElementById('beta-btn');
      betaBtn.classList.toggle('active', currentBeta);

      const comment = document.getElementById('oneliner-comment');
      comment.textContent = currentBeta ? "# Living on the edge. Fresh from the lab." : "# Works everywhere. Installs everything.";
      const npmComment = document.getElementById('npm-comment-install');
      if (npmComment) npmComment.textContent = currentBeta ? "# Install OpenClaw (beta)" : "# Install OpenClaw";
    }

    function updateVisibility() {
      document.getElementById('code-oneliner').style.display = currentMode === 'oneliner' ? 'block' : 'none';
      document.getElementById('code-npm').style.display = currentMode === 'npm' ? 'block' : 'none';
      document.getElementById('code-hackable').style.display = currentMode === 'hackable' ? 'block' : 'none';
      document.getElementById('code-macos').style.display = currentMode === 'macos' ? 'block' : 'none';

      const showOs = currentMode === 'oneliner';
      const showPm = currentMode === 'npm';
      const showHackable = currentMode === 'hackable';
      const showBeta = currentMode === 'oneliner' || currentMode === 'npm';
      const showWinShell = showOs && currentOs === 'windows';

      document.getElementById('os-indicator').style.display = showOs && !osPickerExpanded ? 'flex' : 'none';
      document.getElementById('os-switch').style.display = showOs && osPickerExpanded ? 'flex' : 'none';
      document.getElementById('win-shell-switch').style.display = showWinShell ? 'flex' : 'none';
      document.getElementById('pm-switch').style.display = showPm ? 'flex' : 'none';
      document.getElementById('hackable-switch').style.display = showHackable ? 'flex' : 'none';
      document.getElementById('beta-toggle').style.display = showBeta ? 'flex' : 'none';
    }

    document.getElementById('os-change-btn')?.addEventListener('click', () => {
      currentOs = currentOs === 'unix' ? 'windows' : 'unix';
      updateCommands();
      updateVisibility();
    });
    document.getElementById('beta-btn')?.addEventListener('click', () => { currentBeta = !currentBeta; updateCommands(); });

    document.querySelectorAll('.switch-btn[data-pm]').forEach(btn => {
      btn.addEventListener('click', () => {
        currentPm = btn.dataset.pm;
        document.querySelectorAll('.switch-btn[data-pm]').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        updateCommands();
      });
    });

    document.querySelectorAll('.switch-btn[data-hackable]').forEach(btn => {
      btn.addEventListener('click', () => {
        currentHackable = btn.dataset.hackable;
        document.querySelectorAll('.switch-btn[data-hackable]').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        updateCommands();
      });
    });

    document.querySelectorAll('.switch-btn[data-os]').forEach(btn => {
      btn.addEventListener('click', () => {
        currentOs = btn.dataset.os;
        document.querySelectorAll('.switch-btn[data-os]').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        osPickerExpanded = false;
        updateCommands();
        updateVisibility();
      });
    });

    document.querySelectorAll('.switch-btn[data-shell]').forEach(btn => {
      btn.addEventListener('click', () => {
        currentWinShell = btn.dataset.shell;
        document.querySelectorAll('.switch-btn[data-shell]').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        updateCommands();
      });
    });

    document.querySelectorAll('.mode-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        currentMode = btn.dataset.mode;
        document.querySelectorAll('.mode-btn').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        osPickerExpanded = false;
        updateVisibility();
      });
    });

    document.querySelectorAll('.switch-btn[data-os]').forEach(b => b.classList.toggle('active', b.dataset.os === currentOs));
    updateCommands();
    updateVisibility();

    const copyCommands = {
      'oneliner': () => {
        if (currentOs === 'unix') return currentBeta ? "curl -fsSL https://openclaw.ai/install.sh | bash -s -- --beta" : "curl -fsSL https://openclaw.ai/install.sh | bash";
        return currentWinShell === 'cmd' ? (currentBeta ? windowsCmdBetaCmd : windowsCmdCmd) : (currentBeta ? windowsPsBetaCmd : windowsPsCmd);
      },
      'install': () => currentPm === 'npm' ? `npm i -g openclaw${currentBeta ? '@beta' : ''}` : `pnpm add -g openclaw${currentBeta ? '@beta' : ''}`,
      'onboard': () => 'openclaw onboard',
      'hackable-installer': () => "curl -fsSL https://openclaw.ai/install.sh | bash -s -- --install-method git",
      'clone': () => 'git clone https://github.com/openclaw/openclaw.git',
      'build': () => 'cd openclaw && pnpm install && pnpm run build',
      'hackable-onboard': () => 'pnpm run openclaw onboard',
    };

    document.querySelectorAll('.copy-line-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const cmdKey = btn.dataset.cmd;
        const code = copyCommands[cmdKey]();
        try {
          await navigator.clipboard.writeText(code);
          btn.classList.add('copied');
          btn.querySelector('.copy-icon').style.display = 'none';
          btn.querySelector('.check-icon').style.display = 'block';
          setTimeout(() => {
            btn.classList.remove('copied');
            btn.querySelector('.copy-icon').style.display = 'block';
            btn.querySelector('.check-icon').style.display = 'none';
          }, 2000);
        } catch (err) { console.error('Copy failed:', err); }
      });
    });
  </script>
