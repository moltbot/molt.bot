---
import Layout from '../layouts/Layout.astro';
import testimonials from '../data/testimonials.json';
import { getCollection } from 'astro:content';
import {
  siWhatsapp, siTelegram, siDiscord, siNotion, siSpotify,
  siGithub, siGooglechrome, siHomeassistant, siAnthropic, siSignal
} from 'simple-icons';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const latestPost = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime())[0];

const topTestimonials = testimonials.slice(0, 12);

// Featured integrations for teaser
const featuredIntegrations = [
  { name: 'WhatsApp', path: siWhatsapp.path, color: '#25D366' },
  { name: 'Telegram', path: siTelegram.path, color: '#26A5E4' },
  { name: 'Discord', path: siDiscord.path, color: '#5865F2' },
  { name: 'Signal', path: siSignal.path, color: '#3A76F0' },
  { name: 'Notion', path: siNotion.path, color: '#9ca3af' },
  { name: 'Spotify', path: siSpotify.path, color: '#1DB954' },
  { name: 'GitHub', path: siGithub.path, color: '#6b7280' },
  { name: 'Chrome', path: siGooglechrome.path, color: '#4285F4' },
  { name: 'Home Assistant', path: siHomeassistant.path, color: '#41BDF5' },
  { name: 'Anthropic', path: siAnthropic.path, color: '#D4A574' },
];
---

<Layout title="OpenClaw — Personal AI Assistant">
  <nav class="nav">
    <a href="/" class="nav-logo">
      <img src="/logo.png" alt="OpenClaw" class="logo light-logo" />
      <img src="/logo-dark.png" alt="OpenClaw" class="logo dark-logo" />
    </a>
    <div class="nav-right">
      <div class="nav-links">
        <a href="/integrations">Integrations</a>
        <a href="/showcase">Showcase</a>
        <a href="https://docs.openclaw.ai" target="_blank">Docs</a>
        <a href="https://github.com/openclaw/openclaw" target="_blank" class="nav-icon" aria-label="GitHub"><svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg></a>
      </div>
      <button class="theme-btn" id="theme-toggle" aria-label="Toggle theme">
        <svg class="sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/></svg>
        <svg class="moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
      </button>
      <button class="hamburger" id="hamburger" aria-label="Menu">
        <svg class="hamburger-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
        <svg class="close-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
      </button>
    </div>
  </nav>

  <div class="mobile-menu" id="mobile-menu">
    <a href="/integrations">Integrations</a>
    <a href="/showcase">Showcase</a>
    <a href="https://docs.openclaw.ai" target="_blank">Docs</a>
    <a href="https://github.com/openclaw/openclaw" target="_blank">GitHub</a>
  </div>

  <main>
    <section class="hero">
      <div class="hero-logo-wrap">
        <img src="/logo.png" alt="OpenClaw" class="hero-logo light-logo" />
        <img src="/logo-dark.png" alt="OpenClaw" class="hero-logo dark-logo" />
      </div>
      <h1>The AI that actually does things.</h1>
      <p class="hero-sub">
        Clears your inbox, manages your calendar, controls your smart home.
        All from WhatsApp, Telegram, or any chat app you already use.
      </p>
      <div class="hero-actions">
        <a href="https://docs.openclaw.ai/getting-started" class="btn btn-primary">Get Started</a>
        <a href="https://discord.com/invite/clawd" class="btn btn-secondary">Join Discord</a>
      </div>
    </section>

    {latestPost && (
      <a href={`/blog/${latestPost.slug}`} class="announcement">
        <span class="announcement-tag">New</span>
        <span>{latestPost.data.title}</span>
        <span class="announcement-arrow">&rarr;</span>
      </a>
    )}

    <section class="install">
      <div class="code-block">
        <div class="code-header">
          <div class="mode-tabs">
            <button class="mode-btn active" data-mode="oneliner">One-liner</button>
            <button class="mode-btn" data-mode="npm">npm</button>
            <button class="mode-btn" data-mode="hackable">Hackable</button>
            <button class="mode-btn" data-mode="macos">macOS App</button>
          </div>
          <div class="header-controls">
            <div class="pm-switch" id="pm-switch" style="display: none;">
              <button class="switch-btn active" data-pm="npm">npm</button>
              <button class="switch-btn" data-pm="pnpm">pnpm</button>
            </div>
            <div class="hackable-switch" id="hackable-switch" style="display: none;">
              <button class="switch-btn active" data-hackable="installer">installer</button>
              <button class="switch-btn" data-hackable="pnpm">pnpm</button>
            </div>
            <div class="os-indicator" id="os-indicator">
              <span class="os-detected" id="os-detected">macOS/Linux</span>
              <button class="os-change-btn" id="os-change-btn">change</button>
            </div>
            <div class="os-switch" id="os-switch" style="display: none;">
              <button class="switch-btn active" data-os="unix">macOS/Linux</button>
              <button class="switch-btn" data-os="windows">Windows</button>
            </div>
            <div class="win-shell-switch" id="win-shell-switch" style="display: none;">
              <button class="switch-btn active" data-shell="powershell">PowerShell</button>
              <button class="switch-btn" data-shell="cmd">CMD</button>
            </div>
            <div class="beta-toggle" id="beta-toggle">
              <button class="beta-btn" id="beta-btn" data-beta="false">
                <span class="beta-indicator"></span>
                <span>Beta</span>
              </button>
            </div>
          </div>
        </div>
        <div class="code-body">
          <div id="code-oneliner" class="code-content">
            <div class="code-line">
              <span class="code-comment" id="oneliner-comment"># Works everywhere. Installs everything.</span>
            </div>
            <div class="code-line">
              <span class="code-prompt">$</span>
              <code class="os-cmd">curl -fsSL https://openclaw.ai/install.sh | bash</code>
              <button class="copy-line-btn" data-cmd="oneliner" title="Copy">
                <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none"><polyline points="20 6 9 17 4 12"/></svg>
              </button>
            </div>
          </div>
          <div id="code-npm" class="code-content" style="display: none;">
            <div class="code-line">
              <span class="code-comment" id="npm-comment-install"># Install OpenClaw</span>
            </div>
            <div class="code-line">
              <span class="code-prompt">$</span>
              <code class="pm-install">npm i -g openclaw</code>
              <button class="copy-line-btn" data-cmd="install" title="Copy">
                <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none"><polyline points="20 6 9 17 4 12"/></svg>
              </button>
            </div>
            <div class="code-line">
              <span class="code-comment"># Start the setup wizard</span>
            </div>
            <div class="code-line">
              <span class="code-prompt">$</span>
              <code>openclaw onboard</code>
              <button class="copy-line-btn" data-cmd="onboard" title="Copy">
                <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none"><polyline points="20 6 9 17 4 12"/></svg>
              </button>
            </div>
          </div>
          <div id="code-hackable" class="code-content" style="display: none;">
            <div id="hackable-installer-content">
              <div class="code-line">
                <span class="code-comment"># For those who read source code for fun</span>
              </div>
              <div class="code-line">
                <span class="code-prompt">$</span>
                <code class="os-cmd-hackable">curl -fsSL https://openclaw.ai/install.sh | bash -s -- --install-method git</code>
                <button class="copy-line-btn" data-cmd="hackable-installer" title="Copy">
                  <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                  <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none"><polyline points="20 6 9 17 4 12"/></svg>
                </button>
              </div>
            </div>
            <div id="hackable-pnpm-content" style="display: none;">
              <div class="code-line">
                <span class="code-comment"># Clone and build from source</span>
              </div>
              <div class="code-line">
                <span class="code-prompt">$</span>
                <code>git clone https://github.com/openclaw/openclaw.git</code>
                <button class="copy-line-btn" data-cmd="clone" title="Copy">
                  <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                  <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none"><polyline points="20 6 9 17 4 12"/></svg>
                </button>
              </div>
              <div class="code-line">
                <span class="code-prompt">$</span>
                <code>cd openclaw && pnpm install && pnpm run build</code>
                <button class="copy-line-btn" data-cmd="build" title="Copy">
                  <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                  <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none"><polyline points="20 6 9 17 4 12"/></svg>
                </button>
              </div>
              <div class="code-line">
                <span class="code-prompt">$</span>
                <code>pnpm run openclaw onboard</code>
                <button class="copy-line-btn" data-cmd="hackable-onboard" title="Copy">
                  <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="9" y="9" width="13" height="13" rx="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
                  <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none"><polyline points="20 6 9 17 4 12"/></svg>
                </button>
              </div>
            </div>
          </div>
          <div id="code-macos" class="code-content" style="display: none;">
            <div class="macos-app">
              <div class="macos-info">
                <span class="macos-badge">Companion App</span>
                <p>Menubar access to your lobster. Works alongside the CLI.</p>
              </div>
              <a href="https://github.com/openclaw/openclaw/releases/latest" class="macos-download" target="_blank" rel="noopener">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
                Download for macOS
              </a>
              <span class="macos-meta">Requires macOS 14+ · Universal Binary</span>
            </div>
          </div>
        </div>
      </div>
      <p class="install-note">Works on macOS, Windows & Linux. The one-liner installs Node.js and everything for you.</p>
    </section>

    <section class="features">
      <div class="features-intro">
        <div class="features-copy">
          <p class="features-kicker">Feature set</p>
          <h2>More than chat: a local operator for your projects.</h2>
          <p>OpenClaw runs on your machine, remembers context, and can take real-world actions across your tools.</p>
        </div>
        <div class="features-metrics">
          <div class="metric">
            <span class="metric-value">50+</span>
            <span class="metric-label">Integrations</span>
          </div>
          <div class="metric">
            <span class="metric-value">100+</span>
            <span class="metric-label">Community Skills</span>
          </div>
          <div class="metric">
            <span class="metric-value">Local</span>
            <span class="metric-label">Private by default</span>
          </div>
        </div>
      </div>
      <div class="features-grid">
        <a href="https://docs.openclaw.ai/getting-started" class="feature-card feature-card--hero">
          <div class="feature-top">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
            </div>
            <span class="feature-pill">Local-first</span>
          </div>
          <h3>Runs on your machine</h3>
          <p>Private by default. Your data stays on your computer — you decide what leaves.</p>
          <ul class="feature-list">
            <li>Mac, Windows, Linux supported</li>
            <li>Offline-friendly with local storage</li>
          </ul>
          <div class="feature-illustration feature-illustration--local" aria-hidden="true">
            <span class="local-monitor"></span>
            <span class="local-tower"></span>
            <span class="local-lock"></span>
          </div>
          <span class="feature-cta">See how local mode works &rarr;</span>
        </a>
        <a href="https://docs.openclaw.ai/tools/exec" class="feature-card feature-card--actions">
          <div class="feature-top">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/></svg>
            </div>
            <span class="feature-pill">Action Engine</span>
          </div>
          <h3>Exec tool: run real commands</h3>
          <p>Run shell commands in your workspace with foreground or background execution.</p>
          <ul class="feature-list">
            <li>Foreground + background via process sessions</li>
            <li>Sandbox, gateway, or node hosts with approvals</li>
          </ul>
          <span class="feature-cta">Read exec tool docs &rarr;</span>
        </a>
        <a href="https://docs.openclaw.ai/concepts/session" class="feature-card feature-card--memory">
          <div class="feature-top">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
            </div>
            <span class="feature-pill">Memory</span>
          </div>
          <div class="feature-decor feature-decor-memory">
            <span class="memory-card"></span>
            <span class="memory-card"></span>
            <span class="memory-card"></span>
          </div>
          <h3>Memory that actually sticks</h3>
          <p>Stores decisions, names, and project state so you don’t have to restate it every time.</p>
          <ul class="feature-list">
            <li>Cross-thread summaries and recall</li>
            <li>Personal context vault</li>
          </ul>
          <span class="feature-cta">How memory works &rarr;</span>
        </a>
        <a href="/integrations" class="feature-card">
          <div class="feature-top">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
            </div>
            <span class="feature-pill">Chat Surfaces</span>
          </div>
          <h3>Lives where you already talk</h3>
          <p>One agent, many front doors — keep a single identity across your team’s chats.</p>
          <ul class="feature-list">
            <li>50+ channels with one identity</li>
            <li>Switch platforms without losing context</li>
          </ul>
          <div class="feature-illustration feature-illustration--chat" aria-hidden="true">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
          </div>
          <span class="feature-cta">Browse integrations &rarr;</span>
        </a>
        <a href="https://docs.openclaw.ai/tools/browser" class="feature-card feature-card--browser">
          <div class="feature-top">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
            </div>
            <span class="feature-pill">Browser Ops</span>
          </div>
          <div class="feature-decor feature-decor-browser">
            <div class="browser-bar">
              <span></span><span></span><span></span>
            </div>
            <div class="browser-lines">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </div>
          <h3>Browser automation</h3>
          <p>Navigate sites, scrape structured data, and complete multi-step flows on your behalf.</p>
          <ul class="feature-list">
            <li>RPA for the web, on demand</li>
            <li>QA and ops workflows without scripts</li>
          </ul>
          <span class="feature-cta">See browser tools &rarr;</span>
        </a>
        <a href="https://clawhub.com" class="feature-card feature-card--wide" target="_blank">
          <div class="feature-top">
            <div class="feature-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></svg>
            </div>
            <span class="feature-pill">Skill Library</span>
          </div>
          <h3>100+ skills, plus your own</h3>
          <p>Pull community skills or ship custom automations in TypeScript.</p>
          <ul class="feature-list">
            <li>Browse, remix, and publish on ClawHub</li>
            <li>Build fast with a simple SDK</li>
          </ul>
          <div class="feature-illustration feature-illustration--skills" aria-hidden="true">
            <span class="skill-card"></span>
            <span class="skill-card"></span>
            <span class="skill-card"></span>
            <span class="skill-badge"></span>
          </div>
          <span class="feature-cta">Visit ClawHub &rarr;</span>
        </a>
      </div>
    </section>

    <section class="integrations-teaser">
      <div class="integrations-content">
        <div class="integrations-text">
          <h2>Works with your tools.</h2>
          <p class="integrations-sub">Chat apps, docs, calendars, and smart home.</p>
          <a href="/integrations" class="integrations-link">See all 50+ integrations &rarr;</a>
        </div>
        <div class="integrations-icons">
          {featuredIntegrations.map((item) => (
            <div class="integration-icon" title={item.name}>
              <svg viewBox="0 0 24 24" width="22" height="22" fill={item.color}>
                <path d={item.path} />
              </svg>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="press" aria-labelledby="press-title">
      <div class="press-header">
        <h2 id="press-title">Press</h2>
        <p class="press-sub">Selected coverage</p>
      </div>
      <div class="press-grid">
        <a href="https://www.macstories.net/stories/clawdbot-showed-me-what-the-future-of-personal-ai-assistants-looks-like/" class="press-card" target="_blank">
          <span class="press-source">MacStories</span>
          <p>"OpenClaw Showed Me What the Future of Personal AI Assistants Looks Like"</p>
          <span class="press-author">Federico Viticci</span>
        </a>
        <a href="https://www.starryhope.com/minipcs/clawdbot-mac-mini-ai-agent-trend/" class="press-card" target="_blank">
          <span class="press-source">StarryHope</span>
          <p>"The Lobster Takeover: Why Developers Are Buying Mac Minis to Run Their Own AI Agents"</p>
          <span class="press-author">Jim Mendenhall</span>
        </a>
      </div>
    </section>

    <section class="testimonials">
      <h2>What people are saying</h2>
